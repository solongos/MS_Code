#include "stdafx.h"								//visual stdio 2013...
#include <cstdio>


int main()
{
	int num, i, j;

	while (1) {
		printf("출력할 단을 입력해주세요: ");
		scanf("%d", &num);
		getchar();								//visual stdio 2013...

		if (num < 1 || num>9){
			printf("1~9 사이의 숫자로 다시 입력해주세요-----------\n");
		}
		else
			break;
	}

	for (i = 1; i <= 9; i++){
		for (j = 1; j <= num*i; j++)
			printf("*");
		printf("\n");
	}

	getchar();									//visual stdio 2013...
	return 0;
}
